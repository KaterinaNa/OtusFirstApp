<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        style="@style/filmImageStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@color/colorPrimary" />

    <TextView
        android:id="@+id/filmName"
        style="@style/filmNameStyle"
        android:layout_height="wrap_content"
        tools:text="Film name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <Button
        android:id="@+id/openDescr"
        style="@style/button"
        android:text="@string/podrobnee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setLike" />

    <ImageView
        android:id="@+id/setLike"
        style="@style/iconStyle"
        app:srcCompat="@drawable/ic_favorite_border_24px"
        app:layout_constraintStart_toStartOf="@id/filmName"
        app:layout_constraintTop_toBottomOf="@id/filmName"
        app:layout_constraintLeft_toRightOf="@id/setLater"/>


    <ImageView
        android:id="@+id/setLater"
        style="@style/iconStyle"
        app:srcCompat="@drawable/ic_alarm_24px"
        app:layout_constraintStart_toEndOf="@id/setLike"
        app:layout_constraintTop_toBottomOf="@id/filmName"
        android:layout_width="24dp"
        android:layout_height="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>